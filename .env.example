# DICOM Worklist Generator Configuration
# Copy this file to .env and modify the values as needed

# Directory for storing generated worklist files
# Use relative path for local storage or absolute path for shared storage
WORKLIST_DIR=worklists

# Alternative examples:
# WORKLIST_DIR=F:\PROJECT\hasta-pacs\orthanc-mwl\worklists  # Direct to Orthanc MWL
# WORKLIST_DIR=C:\orthanc\worklists                         # Custom path
# WORKLIST_DIR=\\server\shared\worklists                    # Network share

# Default institution information
INSTITUTION_NAME=Hasta Radiologi
DEPARTMENT_NAME=Radiology

# Default modality settings
DEFAULT_MODALITY=CR
DEFAULT_AE_TITLE=ORTHANC

# File naming options
FILENAME_PREFIX=
FILENAME_SUFFIX=

# Cleanup settings (days) - automatically delete files older than this
CLEANUP_DAYS=30

# Validation settings
VALIDATE_REQUIRED_FIELDS=true
VALIDATE_DATE_FORMAT=true

# Logging
LOG_LEVEL=info
LOG_FILE=worklist-generator.log
