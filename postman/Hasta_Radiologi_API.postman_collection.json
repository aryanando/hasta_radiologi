  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Set dynamic variables for testing",
          "pm.globals.set('timestamp', Date.now());",
          "pm.globals.set('testPatientId', 'P' + Date.now());",
          "pm.globals.set('testAccessionNumber', 'ACC' + Date.now());",
          "",
          "// Log request info",
          "console.log('ðŸš€ Request:', pm.request.method, pm.request.url.toString());"
        ]
      }
    },
    {
      "listen": "test",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Basic response validation",
          "pm.test('Status code is success', function () {",
          "    pm.expect(pm.response.code).to.be.oneOf([200, 201, 202]);",
          "});",
          "",
          "pm.test('Response has success property', function () {",
          "    const jsonData = pm.response.json();",
          "    if (jsonData.hasOwnProperty('success')) {",
          "        pm.expect(jsonData.success).to.be.true;",
          "    }",
          "});",
          "",
          "pm.test('Response time is acceptable', function () {",
          "    pm.expect(pm.response.responseTime).to.be.below(5000);",
          "});",
          "",
          "// Log response info",
          "console.log('âœ… Response:', pm.response.status, pm.response.responseTime + 'ms');"
        ]
      }
    }
